<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="400dp"
    >


        <View
            android:id="@+id/white_block"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/title_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/white_block"
            android:layout_alignParentStart="true"

            android:background="#C6C6C6"

            android:padding="10dp"

            android:text="Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="175sp"
            android:layout_below="@+id/title_popup"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/des_popup"
            android:text="Description"
            android:layout_below="@+id/image"
            android:textSize="14sp"
            android:padding="10dp"/>

        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/white_block"
            android:layout_alignEnd="@+id/white_block"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:text="OK!"
            android:id="@+id/close"/>


</RelativeLayout>